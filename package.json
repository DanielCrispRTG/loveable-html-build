{
  "name": "snaphashqr-desktop",
  "version": "1.0.0",
  "description": "Secure Image Verification with Hashgraph Technology",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "debug": "electron . --debug --enable-logging",
    "camera-test": "electron . --camera-test --enable-logging",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "install-app": "npm run build-mac && cp -r dist/mac/SnapHashQR.app /Applications/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielCrispRTG/loveable-html-build.git"
  },
  "keywords": [
    "electron",
    "desktop",
    "qr",
    "verification",
    "blockchain",
    "hashgraph"
  ],
  "author": "Daniel Crisp - RTG",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.rtg.snaphashqr",
    "productName": "SnapHashQR",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "assets/icon.icns",
      "assets/icon.png"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "extendInfo": {
        "NSCameraUsageDescription": "SnapHashQR needs camera access to capture photos for verification.",
        "NSMicrophoneUsageDescription": "SnapHashQR may need microphone access for video capture."
      }
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "bugs": {
    "url": "https://github.com/DanielCrispRTG/loveable-html-build/issues"
  },
  "homepage": "https://github.com/DanielCrispRTG/loveable-html-build#readme",
  "dependencies": {
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.4"
  }
}
